<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/paymentTabRowView_upperLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/paymentTabRowView_output_payment_name"
            style="@style/LargeFont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left" />

        <TextView
            android:id="@+id/paymentTabRowView_output_payment_amount"
            style="@style/LargeFont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right" />
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentTabRowView_upperLayout" >

        <TableRow>

            <TextView
                    android:id="@+id/paymentTabRowView_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:text="@string/payment_view_label_date_time"
                    android:width="90dp" />

            <TextView
                    android:id="@+id/paymentTabRowView_output_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/paymentTabRowView_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/payment_view_label_category"
                android:width="90dp" />

            <TextView
                android:id="@+id/paymentTabRowView_output_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/paymentTabRowView_label_payed_by"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/payment_view_label_payed_by" />

            <TextView
                android:id="@+id/paymentTabRowView_output_payed_by"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="false" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/paymentTabRowView_label_debited_to"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/payment_view_label_debited_to" />

            <TextView
                android:id="@+id/paymentTabRowView_output_debited_to"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="false" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/paymentTabRowView_label_transfer_from"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/payment_view_label_transfer_from"
                android:width="90dp" />

            <TextView
                android:id="@+id/paymentTabRowView_output_transfer_from"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="false" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/paymentTabRowView_label_transfer_to"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/payment_view_label_transfer_to" />

            <TextView
                android:id="@+id/paymentTabRowView_output_transfer_to"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="false"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>