<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/money_transfer_list_view_table_ro" >

    <TextView
        android:id="@+id/money_transfer_list_view_output_name"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:singleLine="false"
         />

    <Button
        android:id="@+id/money_transfer_list_view_button_currency"
        android:gravity="center"
        android:width="50dp" />

    <EditText
        android:id="@+id/money_transfer_list_view_input_amount"
        android:width="100dp" />

    <Button
        android:id="@+id/money_transfer_list_view_button_due_amount"
        android:gravity="center|center_vertical"
        android:width="80dp" />

</TableRow>